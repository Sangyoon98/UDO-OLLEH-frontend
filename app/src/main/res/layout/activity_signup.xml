<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_background_gray"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="center">

    <!--회원가입 레이아웃-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/signup_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/layout_button_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="left"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n"/>

        <EditText
            android:id="@+id/id_signup"
            android:background="@drawable/layout_edittext"
            android:hint="아이디"
            android:textColorHint="#999999"
            android:textColor="@color/black"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:padding="20dp"/>

        <EditText
            android:id="@+id/pw_signup"
            android:background="@drawable/layout_edittext"
            android:hint="비밀번호"
            android:textColorHint="#999999"
            android:textColor="@color/black"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:padding="20dp"/>

        <EditText
            android:id="@+id/pw_signup_check"
            android:background="@drawable/layout_edittext"
            android:hint="비밀번호 확인"
            android:textColorHint="#999999"
            android:textColor="@color/black"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:padding="20dp"/>

        <EditText
            android:id="@+id/nickname"
            android:background="@drawable/layout_edittext"
            android:hint="닉네임"
            android:textColorHint="#999999"
            android:textColor="@color/black"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:padding="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n"/>

        <Button
            android:id="@+id/signup"
            android:background="@drawable/layout_button_gradient_press_motion"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:text="회원가입"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n\n\n\n\n"/>

    <!--SNS 회원가입 레이아웃-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="SNS 간편 로그인"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <!--아이콘-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/social_kakao"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/social_naver"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/social_facebook"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/social_google"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>