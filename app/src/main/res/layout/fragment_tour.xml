<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_rounded_2"
    android:orientation="vertical"
    tools:context=".TourFragment">

    <!--추천 관광지 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_rounded_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/layout_rounded_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천 관광지"
                android:textStyle="bold"
                android:textSize="15dp"
                android:paddingTop="20dp"
                android:paddingLeft="50dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--관광지 박스 레이아웃 5개-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        android:visibility="visible">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="10dp">

                            <ImageView
                                android:src="@drawable/tour1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/layout_rounded_box"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="bottom"
                                android:paddingTop="30dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:background="@drawable/layout_rounded_box_gradient">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="우도 밭담"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="정겨운 농사와 어루어진 현무암의 밭담"
                                    android:textSize="10dp"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        android:visibility="visible">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="10dp">

                            <ImageView
                                android:src="@drawable/tour2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="bottom"
                                android:paddingTop="30dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:background="@drawable/layout_rounded_box_gradient">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="우도 밭담"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="정겨운 농사와 어루어진 현무암의 밭담"
                                    android:textSize="10dp"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        android:visibility="visible">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="10dp">

                            <ImageView
                                android:src="@drawable/tour3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="bottom"
                                android:paddingTop="30dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:background="@drawable/layout_rounded_box_gradient">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="우도 밭담"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="정겨운 농사와 어루어진 현무암의 밭담"
                                    android:textSize="10dp"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        android:visibility="visible">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="10dp">

                            <ImageView
                                android:src="@drawable/tour1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="bottom"
                                android:paddingTop="30dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:background="@drawable/layout_rounded_box_gradient">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="우도 밭담"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="정겨운 농사와 어루어진 현무암의 밭담"
                                    android:textSize="10dp"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        android:visibility="visible">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="10dp">

                            <ImageView
                                android:src="@drawable/tour2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="bottom"
                                android:paddingTop="30dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:background="@drawable/layout_rounded_box_gradient">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="우도 밭담"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="정겨운 농사와 어루어진 현무암의 밭담"
                                    android:textSize="10dp"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

    <!--우도 여행코스 Top5 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/layout_rounded_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우도 여행코스 Top5"
            android:textStyle="bold"
            android:textSize="15dp"
            android:paddingTop="20dp"
            android:paddingLeft="50dp"
            android:paddingBottom="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tourCourseRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/noneTourText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="여행 코스가 없습니다."
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="visible"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>